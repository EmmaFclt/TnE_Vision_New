
<!-- sidebar-wrapper  -->

<main class="page-content flex-grow-1 p-5 d-block">
  <div class="d-flex justify-content-between align-items-center">
    <h5>Dépenses globales</h5>
    <%= image_tag("Logo-TNE-RVB-small.png", :alt => "#", :class => "logo") %>
  </div>

  <hr>

  <div class="d-flex my-4">
    <%= simple_form_for :filter, url: root_path, method: :get do |f| %>

      <div class="btn mx-2 dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Conformité
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">
            <%= f.input :compliancy, as: :boolean %>
          </a>
        </div>
      </div>

      <div class="btn mx-2 dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Entité
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">
            <%= f.input :entity, :collection => @entities, wrapper_html: { class: 'form-group' }, :as => :check_boxes, :multiple => true, include_hidden: false %>
          </a>
        </div>
      </div>

      <div class="btn mx-2 dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Service
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">
            <%= f.input :service, :collection => @services, wrapper_html: { class: 'form-group' }, :as => :check_boxes, :multiple => true, include_hidden: false %>
          </a>
        </div>
      </div>

      <div class="btn mx-2 dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Date
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item date" href="#">
            <%= f.input :start_date, as: :date%>
          </a>
        </div>
      </div>

      <div class="btn">
        <%= f.submit 'Filtrer', :class => "btn btn-primary mx-2" %>
      </div>
    <% end %>
  </div>
<br>
  <% if @company.transactions.count != 0 %>
    <div class="row mb-4">
      <div class="col-xs-12 col-sm-4">
        <div class="card-chart">
        <h3>Top 5 travellers</h3>
          <%= bar_chart @company.top_5_travellers, {colors:["#dd0", "#dd0", "#aad", "#fb2"], download: true }%>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4">
        <div class="card-chart">
          <h3>Transactions per day</h3>
          <!-- <-- <canvas id="myChart" width="400" height="400"></canvas> -->
          <%= column_chart @transactions_count_week, download: true %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4 ">
        <div class="card-chart">
          <h3>Type of spend</h3>
          <!-- <canvas id="myChartPie" width="300" height="300" data-keys="<%= @types.keys.join(',') %>"></canvas> -->
          <%= pie_chart @types, { colors:["#fea", "#9be", "#aad", "#fb2"], download: true } %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-8">
        <div class="card-chart">
          <h3>Travel per country</h3>
          <%= geo_chart @company.transactions.group(:countries).count, download: true %>
          <!-- <canvas id="bubble-chart" width="300" height="300"></canvas> -->
          <!-- <canvas id="marksChart" width="400" height="400"></canvas> -->
        </div>
      </div>

      <div class="col-xs-12 col-sm-4 d-flex align-items-end">
        <div class="card-chart">
          <h3>Cities</h3>
          <%=column_chart @cities, download: true %>
          <!-- <canvas id="bar-chart-horizontal" width="400" height="400" data-keys="<%#= @travellers.keys.join(',') %>" data-values="<%#= @travellers.values.join(',') %>"></canvas> -->
        </div>
      </div>
    </div>

  <% else %>

    <h3 class="text-center mt-5 p-5">Telechargez votre fichier de dépenses de voyages</h3>

  <% end %>
</main>




